# playAgent Environment Configuration
# Copy this file to .env and modify as needed

# ===========================================
# PORTS
# ===========================================
OLLAMA_PORT=11434
NEO4J_HTTP_PORT=7474
NEO4J_URI_PORT=7687
NEODASH_HTTP_PORT=5005
BACKEND_PORT=2024
LANGGRAPH_DEV_PORT=2924
FRONTEND_PORT=3000

# ===========================================
# NEO4J CONFIGURATION
# ===========================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=test1234
NEO4J_DATABASE=neo4j

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
OLLAMA_HOST=http://ollama:11434

# AI Model configuration
MODEL_SERVER=ollama
MODEL_NAME=gpt-oss:20b
EMB_MODEL=nomic-embed-text
EMB_DIMENSION=768
EMB_PROPERTY=text
EMB_SIMILARITY=cosine

# Speech-to-Text configuration
STT_MODEL=whisper
STT_DEVICE=cpu
STT_LANGUAGE=en

# Optional configuration
OPENAI_API_KEY=
VERBOSE=false
VERBOSE_LLM=false
LOGGING=info
SOFTWARE_VERSION=1.0.0

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
LANGGRAPH_API_URL=http://backend:2924
NEXT_PUBLIC_API_URL=http://localhost:2024
NEXT_PUBLIC_ASSISTANT_ID=agent
